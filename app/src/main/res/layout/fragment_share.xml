<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="כאן תוכלו לשתף מידע על חיות, אך יש להמתין לאישור מנהל"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="שם פרטי" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="שם משפחה" />

    <EditText
        android:id="@+id/et_animal_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="שם החיה" />

    <EditText
        android:id="@+id/et_animal_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="תיאור החיה"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/et_animal_sources"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="מקורות מידע (אופציונלי)" />

    <Button
        android:id="@+id/btn_share_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שמור מידע"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
